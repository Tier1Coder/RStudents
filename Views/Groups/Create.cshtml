@model GroupDTO
@{
}

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 id="new-group-title" class="text-center mb-5">New Group</h2>

        <form method="post" enctype="multipart/form-data" id="new-group-form">
            <div class="row mb-3">
                <label for="group-name" class="col-sm-4 col-form-label">Group Name</label>
                <div class="col-sm-8">
                    <input id="group-name" class="form-control" asp-for="GroupName">
                    <span id="group-name-validation" asp-validation-for="GroupName" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary" id="submit-button">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a id="cancel-button" class="btn btn-outline-light" asp-controller="Groups" asp-action="Index" role="button">
                        Cancel
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
